@model GridCore<dl_documentos>

<div class="inner-block">
    <partial name="~/Views/Shared/_TituloSimple.cshtml" />

    <div class="container">
        <div class="card">
            <div class="card-header p-1 bg-danger text-white">
                <span class="float-left p-2">
                    <i class="fas fa-tasks"></i>
                    Listado de Normativas Legales
                </span>
                <a asp-action="Index" asp-controller="home" class="float-right p-2 btn btn-link" style="color: white;">
                    <i class="fas fa-undo"></i>
                </a>
            </div>
            <div class="card-body  m-0 p-0">
                <form asp-action="index" asp-controller="NormativaLegal" method="get">
                    <div class="input-group">

                        @Html.DropDownList("dlt_id", null, "Tipo Normativa...", new { @class = "form-control" })
                        <button type="submit" class="btn btn-outline-secondary"><i class="fas fa-search"></i></button>
                        <a asp-controller="NormativaLegal" asp-action="create"
                           class="btn btn-success btn-sm px-5 radius-15">
                            <i class="fas fa-plus" aria-hidden="true"></i> <span> Agregar</span>
                        </a>
                    </div>
                </form>    
                        <div class="col-md-2 text-right mt-2">
                            
                        </div>
                 
                

                @await Html.PartialAsync("_Griddl_documentoss", Model)
            </div>
        </div>
    </div>
</div>
