@model Carousel
@{ ViewBag.Title = "Eliminar Imagen del Carousel"; }
<partial name="~/Views/Shared/_TituloSimple.cshtml" />
<div class="container">
    <div class="card">
        <div class="card-header  p-1 bg-danger text-white">
            <span class="float-left p-2">
                <i class="fas fa-tasks"></i>
                Eliminar Imagen del Carousel
            </span>
            <a asp-action="details" asp-controller="Carousel" asp-route-id="@Model.Id" class="float-right p-2 btn btn-link" style="color: white;">
                <i class="fas fa-undo"></i>
            </a>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Â¿Esta seguro de eliminar la imagen del gestor?</h4>
            <partial name="_verForm" />
        </div>
        <div class="card-footer">
            <form class="form-row" asp-action="delete" asp-controller="Carousel" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="row col-md-12 text-center">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-danger px-5 radius-15 pointer">
                            <i class="fas fa-check-circle" aria-hidden="true"></i> <span> Eliminar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

