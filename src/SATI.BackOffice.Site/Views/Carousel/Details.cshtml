@model Carousel
@{ ViewBag.Title = "Detalle del Carousel"; }
<partial name="~/Views/Shared/_TituloSimple.cshtml" />

<div class="container">
    <div class="card">
        <div class="card-header p-1 bg-danger text-white">
            <span class="float-left p-2">
                <i class="fas fa-tasks"></i>
                Detalle de Imagen Carousel
            </span>
            <a asp-action="Index" asp-controller="carousel" class="float-right p-2 btn btn-link" style="color: white;">
                <i class="fas fa-undo"></i>
            </a>
        </div>
        <div class="card-body m-0 p-0">
            
                <div class="col text-right mt-2">
                    <a asp-controller="carousel" asp-action="index"
                       class="btn btn-danger btn-sm px-5 radius-15 float-end">
                        <i class="fas fa-eraser" aria-hidden="true"></i> <span> Quitar</span>
                    </a>
                </div>                       
                <partial name="_verForm" />
        </div>
        <div class="card-footer">
            <div class="row col-md-12 text-center">
                <div class="col-md-6">
                    <a asp-controller="carousel"
                       asp-action="edit" asp-route-id="@Model.Id"
                       class="btn btn-secondary w-50 px-5 radius-15 text-white pointer" style="min-width: 170px;">
                        <i class="fas fa-edit"></i><span> Actualizar</span>
                    </a>
                </div>
                <div class="col-md-6">
                    <a asp-controller="carousel"
                       asp-action="index" class="btn btn-secondary w-50 px-5 radius-15 text-white pointer" style="min-width: 170px;">
                        <i class="fas fa-arrow-left"></i>     <span> Retornar</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>