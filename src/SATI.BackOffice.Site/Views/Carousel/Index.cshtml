@model GridCore<Carousel>
<div class="inner-block">
    <partial name="~/Views/Shared/_TituloSimple.cshtml" />
    
    <div class="container">
        <div class="card">
            <div class="card-header p-1 bg-danger text-white">
                <span class="float-left p-2">
                    <i class="fas fa-tasks"></i>
                    Listado de Imagenes del Carousel
                </span>
                <a asp-action="Index" asp-controller="home" class="float-right p-2 btn btn-link" style="color: white;">
                    <i class="fas fa-undo"></i>
                </a>                
            </div>
            <div class="card-body  m-0 p-0">
                <div class="col text-right mt-2">
                    <a asp-controller="carousel" asp-action="create"
                       class="btn btn-success btn-sm px-5 radius-15">
                        <i class="fas fa-plus" aria-hidden="true"></i> <span> Agregar</span>
                    </a>
                </div>
                @await Html.PartialAsync("_GridCarousels", Model)
            </div>
        </div>        
    </div>
</div>

